<div>
  <%= paginate comments %>
</div>

<ul id="comments">
  <% unless comments.empty? %>
    <%= render partial: 'opinio/comments/comment', collection: comments %>
  <% else %>
    <li id="no_comments">
      <%= t 'opinio.no_comments_found', default: "No comments yet, be the first to comment" %>
    </li>
  <% end %>
</ul>

<div>
  <%= paginate comments %>
</div>
