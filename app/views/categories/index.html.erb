<% content_for :head do %>
  <%= auto_discovery_link_tag(:rss,  items_rss_path,  :format => "rss") %>
  <%= auto_discovery_link_tag(:atom, items_atom_path, :format => "atom") %>
<% end %>

<div class="row categories">
  <div class="span6 box" id="main_highlights">
    <ul>
      <% @highlights.each do |item| %>
        <li class="featured_item" id="item_<%=item.id%>">
          <%= link_to(
                image_tag(item.attachments.first.image.main,
                  :class => "featured_item_image"),
                item, 
                :title => "<strong>#{item.title}</strong> <br/> #{item.abstract}"
              )
          %>
          <span class="title">
            <%= link_to item.title.to_s.truncate(100), item,
                  :title => "<strong>#{item.title}</strong> <br/> #{item.abstract}"
            %>
          </span>
          <span class="abstract"><%= item.abstract.to_s.truncate(120) %></span>
        <% end %>
      </li>
    </ul>
  </div>
  
  <div class="span6 box" id="highlights">
    <h1><%= link_to "Latest News", items_path %></h1>
    <ul>
    <% @latest_items.each do |item| %>
      <li class="list_item" id="item_<%=item.id%>">
        <%= link_to(
              image_tag(item.attachments.first.image.small, :class => "list_item_image"),
              item, 
              :title => item.abstract
            )
        %>
        <span class="title"><%= link_to item.title.to_s.truncate(120), item, :title => item.abstract %></span>
        <span class="abstract"><%= item.abstract.to_s.truncate(120) %></span>
      </li>
    <% end %>
    </ul>
  </div>

  <% for category in @categories %>
    <div class="span6 box" id="<%= category.slug %>">
      <h1><%= link_to category.title, category %></h1>
      <ul>
        <% category.top_items(13).each_with_index do |item,index|%>
          <li class="list_item" id="item_<%=item.id%>">
            <% if index==0 && !item.attachments.empty? %>
              <%= link_to(
                    image_tag(item.attachments.first.image.small, :class => "list_item_image"),
                    item, 
                    :title => "<strong>#{item.title}</strong> <br/> #{item.abstract}"
                  )
              %>
              <%= link_to item.title.to_s.truncate(100), item, 
                      :title => "<strong>#{item.title}</strong> <br/> #{item.abstract}"
              %>
              <span class="abstract"><%= item.abstract.to_s.truncate(120) %></span>
            <% else %>
              <span class="noroll">
                <%= link_to item.title.to_s.truncate(100), item, 
                      :title => item_title(item)
                %>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
      <span class="more"><%= link_to "more...", category, :title => "Read more articles in this category" %></span>
    </div>
  <% end %>
</div>


<%= content_for :scripts do %>

  <% unless (is_touch? or is_touch?)%>
    <script>
      $(document).ready(function(){
        $("a").easyTooltip({
          yOffset: 0,
          xOffset: 40
        });
      });
      $(document).ready(function() {
        $(".fancybox").fancybox({
          openEffect  : 'none',
          closeEffect  : 'none'
        });
      });
    </script>
  <% end %>
  
<% end %>
