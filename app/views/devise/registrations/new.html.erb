<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <fieldset class="withBorder">
        <legend>Sign up</legend>
        <div class="clearfix">
          <%= f.label :email %>
          <div class="input">
            <%= f.text_field :email, :required => false, :autofocus => true, :type => "email", :class => "xlarge" %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :password %>
          <div class="input">
            <%= f.password_field :password, :required => false, :class => "xlarge"  %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :password_confirmation %>
          <div class="input">
            <%= f.password_field :password_confirmation, :required => false, :class => "xlarge"  %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", :class => "btn primary", :disable_with => 'Processing...' %>
        </div>
      </fieldset>
    <% end %> <!-- End Form -->
  </div> <!-- End span8-->
</div> <!-- End row -->

<% content_for :breadcrumb do %>
  <li>
    <a href="/">Home</a>
    <span class="divider">/</span>
  </li>
  <li class="active">Sign Up</li>
<% end %>
