<div class="row">
  <div class="span16">
    <div class="row">
      <div class="span12">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
        %>
          <fieldset class="withBorder">
            <legend>Personal Information</legend>
            <div class="clearfix">
              <%= f.label :first_name %>
              <div class="input">
                <%= f.text_field :first_name, :required => false, :autofocus => true, :class => "xlarge" %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :last_name %>
              <div class="input">
                <%= f.text_field :last_name, :required => false, :class => "xlarge"  %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :address %>
              <div class="input">
                <%= f.text_field :address, :required => false, :class => "xlarge"  %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :city %>
              <div class="input">
                <%= f.text_field :city, :required => false, :class => "xlarge"  %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :time_zone %>
              <div class="input">
                <%= f.time_zone_select :time_zone %>
              </div>
            </div>
          </fieldset>
          
          <fieldset class="withBorder">
            <legend>Login Information</legend>
            <div class="clearfix">
              <%= f.label :email %>
              <div class="input">
                <%= f.text_field :email, :required => false, :type => "email", :class => "xlarge" %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :password %>
              <div class="input">
                <%= f.password_field :password, :required => false, :class => "xlarge"  %>
                <span class="help-block">
                  Leave this field black if you want to change password
                </span>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :password_confirmation %>
              <div class="input">
                <%= f.password_field :password_confirmation, :required => false, :class => "xlarge"  %>
              </div>
            </div>
            <div class="clearfix">
              <%= f.label :current_password %>
              <div class="input">
                <%= f.password_field :current_password, :required => false, :class => "xlarge"  %>
                <span class="help-block">
                  We need your current password to confirm your changes
                </span>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Update", :class => "btn primary", :disable_with => 'Processing...' %>
              &nbsp;
              <%= link_to "Delete my account".html_safe, registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class=>'btn danger' %>
          </fieldset>
          
        <% end %> <!-- End Form -->
      </div> <!-- End span11-->
      
    </div> <!-- End row -->
  </div> <!-- End span16 -->
</div>

<% content_for :breadcrumb do %>
  <li>
    <a href="/">Home</a>
    <span class="divider">/</span>
  </li>
  <li class="active">Edit Profile</li>
<% end %>
