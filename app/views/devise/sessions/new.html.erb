<div class="row">
  <div class="span7">

    <%= form_for(resource,
          as: resource_name,
          url: session_path(resource_name),
          html: { class: 'form-horizontal' }
        ) do |f| 
    %>
      <fieldset class="withBorder">
        <legend>Sign in</legend>
        <div class="control-group">
          <%= f.label :email, class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, required: false, autofocus: true, type: "email", class: "span4" %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password, class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, required: false, class: "span4"  %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <label class="checkbox" for="user_remember_me">
            <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
            Remember me for 2 weeks
          </label>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign in", class: "btn btn-primary", disable_with: 'Sending...' %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<% content_for :breadcrumb do %>
  <li>
    <a href="/">Home</a>
    <span class="divider">/</span>
  </li>
  <li class="active">Sign in</li>
<% end %>