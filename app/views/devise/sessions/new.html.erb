<div class="row">
  <div class="span7">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset class="withBorder">
        <legend>Sign in</legend>
        <div class="clearfix">
          <%= f.label :email %>
          <div class="input">
            <%= f.text_field :email, required: false, autofocus: true, type: "email", class: "large" %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :password %>
          <div class="input">
            <%= f.password_field :password, required: false, class: "large"  %>
          </div>
        </div>
        <div class="clearfix">
          <div class="input">
            <ul class="inputs-list">
              <li>
                <label for="user_remember_me">
                  <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  <span>Remember me for 2 weeks</span>
                </label>
              </li>
            </ul>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign in", class: "btn primary", disable_with: 'Sending...' %>
        </div>
      </fieldset>
    <% end %> <!-- End Form -->
  </div> <!-- End span8 -->
</div> <!-- End row -->

<% content_for :breadcrumb do %>
  <li>
    <a href="/">Home</a>
    <span class="divider">/</span>
  </li>
  <li class="active">Sign in</li>
<% end %>