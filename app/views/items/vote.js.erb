<% if !logged_in? %>
  $('#modal-login').modal('show');
<% elsif @own_article %>
  alert("You can't vote on your own article!");
<% elsif @vote_deleted %>
  alert("Your vote has been cleared");
  $("#item_score_<%= @item.id %>").html("<%= escape_javascript(score_for(@item).html_safe) %>");
<% elsif @already_voted %>
  alert("You already voted on this article");
<% elsif @voted %>
  alert("Thank you for your vote!");
  $("#item_score_<%= @item.id %>").html("<%= escape_javascript(score_for(@item).html_safe) %>");
<% end %>
