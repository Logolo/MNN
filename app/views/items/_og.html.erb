<meta property="og:title" content="<%= @item.title %>"/>
<meta property="og:type" content="news, <%= @item.category_title %>, <%= @item.tag_list %>"/>
<meta property="og:url" content="<%= url_for(item_path(@item.id, :only_path => false, :protocol => 'https')) %>"/>
<meta property="og:site_name" content="mnn.herokuapp.com"/>
<meta property="fb:admins" content="MNN"/>
<meta property="og:description" content="<%= @item.abstract %>"/>

<!-- Image -->
<% if @item.has_image? %>
  <meta property="og:image" content="<%= @item.attachments.first.image.small %>"/>
<% end %>