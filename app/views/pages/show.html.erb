<article id="<%= @page.id %>">
  <header>
    <h1><%= @page.title %></h1>
  </header>
  <section>
    <%= @page.body.html_safe %>
  </section>
</article>


<% content_for :breadcrumb do %>
  <li>
    <a href="/">Home</a>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= @page.title %>
  </li>
<% end %>