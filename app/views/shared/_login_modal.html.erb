<div class="modal hide fade" id="modal-login" style="display: none;">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">X</button>
    <h3>Sign in</h3>
  </div>
  <%= form_for(:user, as: :user, url: new_session_url(:user, protocol: 'https'), html: {class: 'form-horizontal'}) do |f| %>
  <div class="modal-body">
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, required: false, autofocus: true, type: "email", class: "span4" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, required: false, class: "span4"  %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox" for="user_remember_me">
          <%= f.check_box :remember_me, as: :boolean %>
          Remember me for 2 weeks
        </label>
      </div>
      <div class="controls">
        Don't have an account? 
        <%= link_to "Register now",
                new_registration_url(:user, protocol: 'https'),
                title: "Click here to register a new Account"
        %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <div class="btn-group">
          <%= f.submit "Login", class: "btn", 'data-disable-with' => 'Sending...' %>
          <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        </div>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= render partial: '/shared/social_connects' %>
      </div>
    </div>
  </div>
  <% end %>
</div>