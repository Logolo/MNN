<meta charset="utf-8">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<meta name="application-name" content="World Mathaba Independent News Agency">
<meta name="generator" content="Ruby on Rails">
<meta http-equiv="Content-Language" Content="<%= I18n.locale.to_s %>">
<% if @meta_description %>
<meta name="description" content="<%= @meta_description %>">
<% else %>
<meta name="description" content="World Mathaba Independent News Agency">
<% end %>
<% if @meta_keywords %>
<meta name="keywords" content="news, <%= @meta_keywords %>">
<% else %>
<meta name="keywords" content="worldmathaba, news, independent, alternative">
<% end %>
<% if @meta_author %>
<meta name="author" content="<%= @meta_author %>">
<% else %>
<meta name="author" content="World Mathaba Independent News Agency">
<% end %>
<% if @meta_title %>
<title> <%= @meta_title %> </title>
<link rel='index' title="<%= @meta_title %>" href="<%= url_for root_path %>" />
<% else %>
<title>World Mathaba Independent News</title>
<link rel='index' title="World Mathaba Independent News" href="<%= url_for(root_path(only_path: false, protocol: 'http'))%>" />
<% end %>

<meta http-equiv="last-modified" content="<%= @last_modified %>" />
<meta name="viewport" content="width=device-width; maximum-scale=1.6; initial-scale=1.0; user-scalable=yes"/>
<meta name="HandheldFriendly" content="true"/>
<link rel="icon" type="image/png" href="/assets/favicon.png" />