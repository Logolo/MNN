<!DOCTYPE html>
<html lang="en" <%= yield(:html_tag) %>>
  <head>
    <%= render :partial => "/shared/head" %>
    <%= stylesheet_link_tag "application" %>
    <%= yield(:stylesheets) %>
    <%= javascript_include_tag "application" %>
    <%= yield(:javascripts) %>
    <%= csrf_meta_tags %>
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= yield(:head) %>
  </head>
  
  <body>
    <%= render :partial => "/shared/topbar" %>

    <div class="container">
      <div class="row">
        <div class="span16">
          <div class="row">
            
            <div class="span3">
              <%= render :partial => "/shared/sidebar" %>
            </div>
            
            <div class="span13">
              <div class="content">
                <%= yield %>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    <%= yield(:footer) %>
    <%= yield(:scripts) %>
  </body>
</html>