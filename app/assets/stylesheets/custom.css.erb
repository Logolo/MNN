/* @section ARTICLE */

article {
  text-align: left;
  margin-bottom: 30px;
  padding: 10px 20px;
  text-rendering: optimizeLegibility;
  background-color: whiteSmoke;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  box-shadow: 0 1px 0 #FFFFFF inset;
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
  box-shadow: 0px 0px 4px #CCC;
}
article.category {  
  background-color: #F5F5F5;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  box-shadow: 0 1px 0 #FFFFFF inset;
  margin: 0 0 18px;
  padding: 5px 5px 5px 12px;
  min-height: 91px;
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
  box-shadow: 0px 0px 5px #CCC;
}
article h1 {
  letter-spacing: 1px;
  font-size: 28px;
  margin-bottom: 0px;
}
article h2 {
  letter-spacing: 1px;
  font-size: 24px;
}
article h3 {
  font-size: 20px;
}
article h4 {
  font-size: 16px;
}
article p img {
  border: 1px solid #DDD;
  padding: 1px;
  -moz-box-shadow: 0px 0px 7px #AAA;
  -webkit-box-shadow: 0px 0px 7px #AAA;
  box-shadow: 0px 0px 7px #AAA;
  margin-right: 14px;
  margin-bottom: 5px;
  margin-top: 3px;
}
article span.date {
  color: #555;
  font-style: italic;
  font-size: 13px;
  padding: 2px 4px 2px 0;
}
article span.author {
  color: #555;
  font-weight: bold;
  font-size: 13px;
  padding: 2px 2px 0 2px;
}

article span.source_url {
  display:block;
  clear: both;
}
article header h1 a:hover,
article header h2 a:hover,
article header h3 a:hover {
  color: #444;
  text-decoration: none;
}
article header h1 a,
article header h2 a,
article header h3 a {
  color: #555;
  text-decoration: none;
}

article section {
  margin-bottom: 14px;
  margin-top: 8px;
  font-size: 13px;
}

article footer {
  margin: 10px 0 10px 0;
  padding: 10px 0 10px 0;
  border-top: 1px solid #DDD;
}
footer ul.footer_menu,
section ul.tags,
article footer ul.tags {
  font-size: 12px;
  margin: 10px 0 0 0;
}
footer ul.footer_menu li,
section ul.tags li,
article footer ul.tags li {
  display: inline;
  padding: 0 5px;
  border-right: 1px solid #777;
}
footer ul.footer_menu li:last-child,
section ul.tags li:last-child,
article footer ul.tags li:last-child {
  border-right: none;
}

article footer div.page_views {
  margin-top: 5px;
}

article footer div.share {
  margin-top: 8px;
  float:right;
}
article footer div.share a {
  margin-left: 4px;
}


