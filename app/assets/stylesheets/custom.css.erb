/* @section ARTICLE */

article {
  text-align: left;
  margin-bottom: 30px;
  padding: 10px 20px;
  text-rendering: optimizeLegibility;
  background-color: whiteSmoke;
  border: 1px solid #DDDDDD;
  border-radius: 3px;
  box-shadow: 0 1px 0 #FFFFFF inset;  
  
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}
article.category {  
  background-color: #F5F5F5;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  box-shadow: 0 1px 0 #FFFFFF inset;
  margin: 0 0 18px;
  padding: 7px 14px;
  min-height: 90px;
  
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}
article h1 {
  letter-spacing: 1px;
  font-size: 30px;
}
article h2 {
  letter-spacing: 1px;
  font-size: 24px;
}
article h3 {
  font-size: 20px;
}
article h4 {
  font-size: 16px;
}
article span.date {
  color: #666;
  font-style: italic;
  font-size: 13px;
  padding: 2px 4px 2px 0;
}
article span.author {
  color: #555;
  font-weight: bold;
  font-size: 13px;
  padding: 2px 2px 0 4px;
}

article header h1 a:hover,
article header h2 a:hover,
article header h3 a:hover {
  color: #444;
  text-decoration: none;
}
article header h1 a,
article header h2 a,
article header h3 a {
  color: #666;
  text-decoration: none;
}

article section {
  margin-bottom: 14px;
  margin-top: 8px;
}

article footer {
  margin: 10px 0 10px 0;
  padding: 10px 0 10px 0;
  border-top: 1px solid #EEE;
}
article footer ul.tags {
  margin: 10px 0 0 0;
}
article footer ul.tags li {
  display: inline;
  padding: 0 3px 0 5px;
  border-right: 1px solid #888;
}
article footer ul.tags li:last-child {
  border-right: none;
}


.categories .box {
  text-align:left;
	-moz-box-shadow: 0px 0px 4px #ddd;
  -webkit-box-shadow: 0px 0px 4px #ddd;
  box-shadow: 0px 0px 4px #ddd;
  padding: 5px 5px 30px 1px;
  margin-bottom: 20px;
  height: 298px;
  overflow: hidden;
  
  background-color: #FFF;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}

.categories .box h1 {
  font-size: 26px;
  padding: 1px 1px 1px 12px;
  margin-bottom: 8px;
}

.categories .box ul {
  margin-left: 12px;
}
.categories .box ul li.list_item {
  margin-bottom: 8px;
  list-style: none;
}

.categories .box ul li.list_item img.list_item_image {
  border: 1px solid #eee;
	-moz-box-shadow: 0px 0px 3px #bbb;
  -webkit-box-shadow: 0px 0px 3px #bbb;
  box-shadow: 0px 0px 3px #bbb;
  margin-right: 8px;
  margin-bottom: 8px;
  float:left;
}

.categories .box ul li.list_item:first-child {
  display: inline-table;
  font-weight: bold;
}


.content article img.show_item_image {
	-moz-box-shadow: 0px 0px 5px #bbb;
  -webkit-box-shadow: 0px 0px 5px #bbb;
  box-shadow: 0px 0px 5px #bbb;
  margin-right: 15px;
  margin-bottom: 15px;
  float:left;
}

.content article.category img.show_item_image {
  margin-top: 6px;
  margin-bottom: 12px;
  margin-right: 12px;
}


blockquote {
  clear: both;
  display: inline-block;
}