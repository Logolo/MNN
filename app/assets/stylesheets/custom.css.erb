/* @section ARTICLE */

article {
  text-align: left;
  margin-bottom: 30px;
  padding: 10px 20px;
  text-rendering: optimizeLegibility;
  background-color: whiteSmoke;
  border: 1px solid #DDDDDD;
  border-radius: 3px;
  box-shadow: 0 1px 0 #FFFFFF inset;  
  
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}
article.category {  
  background-color: #F5F5F5;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  box-shadow: 0 1px 0 #FFFFFF inset;
  margin: 0 0 18px;
  padding: 5px 5px 5px 12px;
  min-height: 91px;
  
  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}
article h1 {
  letter-spacing: 1px;
  font-size: 28px;
  margin-bottom: 0px;
}
article h2 {
  letter-spacing: 1px;
  font-size: 24px;
}
article h3 {
  font-size: 20px;
}
article h4 {
  font-size: 16px;
}
article span.date {
  color: #666;
  font-style: italic;
  font-size: 13px;
  padding: 2px 4px 2px 0;
}
article span.author {
  color: #555;
  font-weight: bold;
  font-size: 13px;
  padding: 2px 2px 0 2px;
}

article span.source_url {
  display:block;
  clear: both;
}
article header h1 a:hover,
article header h2 a:hover,
article header h3 a:hover {
  color: #444;
  text-decoration: none;
}
article header h1 a,
article header h2 a,
article header h3 a {
  color: #666;
  text-decoration: none;
}

article section {
  margin-bottom: 14px;
  margin-top: 2px;
}

article footer {
  margin: 10px 0 10px 0;
  padding: 10px 0 10px 0;
  border-top: 1px solid #DDD;
}
footer ul.footer_menu,
section ul.tags,
article footer ul.tags {
  font-size: 12px;
  margin: 10px 0 0 0;
}
footer ul.footer_menu li,
section ul.tags li,
article footer ul.tags li {
  display: inline;
  padding: 0 3px 0 5px;
  border-right: 1px solid #888;
}
footer ul.footer_menu li:last-child,
section ul.tags li:last-child,
article footer ul.tags li:last-child {
  border-right: none;
}



.categories .box {
  text-align:left;
	-moz-box-shadow: 0px 0px 4px #ddd;
  -webkit-box-shadow: 0px 0px 4px #ddd;
  box-shadow: 0px 0px 4px #ddd;
  padding: 3px 5px 5px 1px;
  margin-bottom: 20px;
  height: 400px;
  overflow: hidden;
  
  background-color: #FFF;
  border: 1px solid #DDDDDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;

  background-repeat: repeat-x;
  background-image: -khtml-gradient(linear, left top, left bottom, from(#ffffff), to(#f5f5f5));
  background-image: -moz-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -ms-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff), color-stop(100%, #f5f5f5));
  background-image: -webkit-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: -o-linear-gradient(top, #ffffff, #f5f5f5);
  background-image: linear-gradient(top, #ffffff, #f5f5f5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f5f5f5', GradientType=0);
}

.categories .box h1 {
  font-size: 22px;
  padding: 1px 1px 1px 12px;
  margin-bottom: 3px;
}

.categories .box ul {
  margin-left: 12px;
  margin-bottom: 4px;
}
.categories .box ul li.list_item {
  margin-bottom: 5px;
  list-style: none;
  line-height: 16px;
}
.categories .box ul li.list_item span.abstract {
  display: block;
  color: #666;
}

.categories .box ul li.list_item img.list_item_image {
  border: 1px solid #eee;
	-moz-box-shadow: 0px 0px 3px #bbb;
  -webkit-box-shadow: 0px 0px 3px #bbb;
  box-shadow: 0px 0px 3px #bbb;
  margin-right: 8px;
  margin-bottom: 2px;
  float:left;
}

.categories .box ul li.list_item:first-child {
  display: inline-table;
  font-weight: bold;
}

#main_highlights.box ul li.featured_item {
  margin-bottom: 5px;
  list-style: none;
  line-height: 16px;
}
#main_highlights.box ul li.featured_item span.abstract {
  float: left;
  display: block;
  text-align: left;
  font-size: 14px;
  margin-bottom:15px;
}
#main_highlights.box ul li.featured_item span.title {
  float: left;
  display: block;
  text-align: left;
  font-size: 18px;
  margin-bottom: 4px;
  line-height: 22px;
}
#selector {  }
#main_highlights.box ul li.featured_item img {
  clear:both;
  display:block;
  text-align: left;
  margin: 10px 2px 10px 2px;
}
#main_highlights.box ul li.featured_item img.featured_item_image {
  box-shadow: 0px 0px 8px #ccc;
  border: 1px solid #ddd;
  padding: 1px;
}

#highlights.box ul li.list_item {
  clear: both;
}
#highlights.box ul li.list_item img {
  box-shadow: 0px 0px 6px #ccc;
  border: 1px solid #ddd;
  padding: 1px;  
  margin-bottom: 12px;
}

.categories .box h2 {
  font-size: 22px;
  padding: 0px;
