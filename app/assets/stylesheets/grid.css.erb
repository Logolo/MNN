@media only screen and (min-width: 640px) {

  body {
    /*padding-top: 60px;*/
    font-size: 13px;
  }
  .container-fluid {
     min-width: 640px;
  }
  .container-fluid > .sidebar {
    float: left;
    width: 208px;
    left: 25px;
    position: absolute;
    display: block;
  }
  .container-fluid > .content {
    margin-left: 230px;
  }
  .navbar div > ul, .nav {
    font-size: 14px;
  }
  div.well form {
    padding: 5px 5px 5px 10px;
    margin-bottom: 2px;
  }
  div.well form input#q {
    /*width: 130px;*/
    margin-bottom: 10px;
  }
  span.noroll {
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
    overflow: hidden; 
  }
  article section {
    font-size: 13px;
  }
  article section span#item_body img {
    max-width: 460px;
    max-height: 400px;
  }
  article footer {
    padding: 20px 0 40px 0;
  }
}

