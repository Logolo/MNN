/* Highend Mobile */
@media handheld and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 767px) {

  body {
    -webkit-text-size-adjust: auto;
  }
  .container-fluid {
     min-width: 480px;
  }
  .container-fluid > .sidebar {
    float: left;
    width: 164px;
    left: 20px;
    position: absolute;
    display: block;
  }
  .container-fluid > .content {
    margin-left: 180px;
  }
  .navbar .brand{
    /*padding: 10px 0px 0px 30px;*/
  }
  ul.nav li#home_link {
    display:none;
  }
  article {
    padding: 8px 20px;
  }
  article h1 {
    font-size: 26px;
    line-height: 32px;
    margin-bottom: 12px;
  }
  article h3 {
    font-size: 20px;
    line-height: 26px;
  }
  .input-xlarge, input.xlarge, textarea.xlarge, select.xlarge {
      width: 200px;
  }
  .categories .box {
    padding: 3px 5px 5px 1px;
    height: auto;
    min-height: 200px;
  }
  div.well form {
    padding: 1px;
    margin-bottom: 2px;
  }
  div.well form input#q {
    width: 130px;
    margin-bottom: 6px;
  }
  span.noroll {
    text-overflow: ellipsis;
    display: block;
    white-space: normal;
    overflow: visible;
  }
  article section {
    font-size: 13px;
  }
  article section span#item_body img {
    max-width: 420px;
    max-height: 380px;
  }
  article footer {
    padding: 20px 0 40px 0;
  }
}


