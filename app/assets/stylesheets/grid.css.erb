/* Lowend Mobile */

@media handheld and (max-width: 360px), screen and (max-device-width: 360px), screen and (max-width: 560px) {
  body {
    -webkit-text-size-adjust: auto;
    /*padding-top: 90px;*/
  }
  .container-fluid {
     min-width: 320px;
     padding-left: 8px;
  }
  .container-fluid > .sidebar {
    float:left;
    display:block;
    position: relative;
    width: 320px;
    left: 12px;
  }
  div.well {
    margin-bottom: 12px;
    padding: 10px 4px 4px 4px;
    text-align:center;
    width: 240px;
  }
  div.well form input#q {
    width: 158px;
    margin-bottom: 0px;
  }
  div.well ul li {
    list-style: none;
  }
  div.well {
    text-align: left;
  }
  div.well ul, div.well ol {
    margin: 0 0 8px 16px;
  }
  .container-fluid > .sidebar .sidebar_secions {
    display:none;
  }
  .container-fluid > .content {
    margin-left: 10px;
    float: left;
    position: inherit;
  }
  .navbar .brand{
    padding: 10px 0px 0px 30px;
    text-align:center;
  }
  .breadcrumb {
    margin: 0 0 10px;
    padding: 7px 10px;
  }
  article {
    padding: 6px 16px;
  }
  article h1 {
    font-size: 22px;
    line-height: 30px;
    margin-bottom: 12px;
  }
  article h3 {
      font-size: 18px;
      line-height: 22px;
  }
  .input-xlarge, input.xlarge, textarea.xlarge, select.xlarge {
      width: 200px;
  }
  .categories .box {
    padding: 3px 5px 5px 1px;
    height: auto;
    min-height: 200px;
  }
  ul.nav li#home_link {
    display:none;
  }
  span.noroll {
    text-overflow: ellipsis;
    display: block;
    white-space: normal;
    overflow: visible;
  }
  article section {
    font-size: 13px;
  }
  .content article img.show_item_image,
  .content article img.youtube {
    display: block;
  }
  article section span#item_body img {
    max-width: 320px;
    max-height: 280px;
  }
  #item_body {
    display: block;
    clear: both;
  }
  article footer {
    padding: 20px 0 40px 0;
  }
}
