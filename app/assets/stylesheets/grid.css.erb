/* Lowend Mobile */

@media handheld and (max-width: 360px), screen and (max-device-width: 360px), screen and (max-width: 560px) {
  body {
    -webkit-text-size-adjust: auto;
    padding-top: 90px;
  }
  .container-fluid {
     min-width: 320px;
     padding-left: 8px;
  }
  .container-fluid > .sidebar {
    float:left;
    display:block;
    position: relative;
    width: 320px;
    left: 12px;
  }
  div.well {
    margin-bottom: 12px;
    padding: 10px 4px 4px 4px;
    text-align:center;
  }
  div.well form input#q {
    width: 200px;
    margin-bottom: 6px;
  }
  .container-fluid > .sidebar .sidebar_secions {
    display:none;
  }
  .container-fluid > .content {
    margin-left: 10px;
    float: left;
    position: inherit;
  }
  .topbar .brand{
    padding: 10px 0px 0px 30px;
    text-align:center;
  }
  .topbar p {
    display:none;
  }
  .topbar div > ul a, .nav a {
    line-height: 16px;
    padding: 10px 5px;
    font-size: 14px;
  }
  .topbar div > ul, .nav {
    margin-left: 1px;
    clear:both;
    display:block;
  }
  .breadcrumb {
    margin: 0 0 10px;
    padding: 7px 10px;
  }
  article {
    padding: 6px 16px;
  }
  article h1 {
    font-size: 22px;
    line-height: 30px;
    margin-bottom: 12px;
  }
  article h3 {
      font-size: 18px;
      line-height: 22px;
  }
  .input-xlarge, input.xlarge, textarea.xlarge, select.xlarge {
      width: 200px;
  }
  .categories .box {
    padding: 3px 5px 5px 1px;
    height: auto;
    min-height: 200px;
  }
  ul.nav li#home_link {
    display:none;
  }
  span.noroll {
    text-overflow: ellipsis;
    display: block;
    white-space: normal;
    overflow: visible;
  }
  article section {
    font-size: 13px;
  }
}
