/* Highend Mobile */
@media handheld and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 767px) {

	body {
/*    font-size: 15px;*/
  	-webkit-text-size-adjust: auto;
    padding-top: 95px;
	}
	.container-fluid {
     min-width: 480px;
  }
  .container-fluid > .sidebar {
    float: left;
    width: 160px;
    left: 20px;
    position: absolute;
    display: block;
  }
  .container-fluid > .content {
    margin-left: 180px;
  }
  .topbar .brand{
    padding: 10px 0px 0px 30px;
  }
  article {
    padding: 8px 20px;
  }
  article h1 {
    font-size: 26px;
    line-height: 32px;
    margin-bottom: 12px;
  }
  article h3 {
      font-size: 20px;
      line-height: 26px;
  }
  .input-xlarge, input.xlarge, textarea.xlarge, select.xlarge {
      width: 200px;
  }
  .categories .box {
    padding: 3px 5px 5px 1px;
    height: auto;
    min-height: 200px;
  }
  .topbar div > ul, .nav {
    margin-left: 1px;
    clear:both;
    display:block;
  }
  div.well form {
    padding: 1px;
    margin-bottom: 2px;
  }
  div.well form input#q {
    width: 130px;
    margin-bottom: 6px;
  }
  span.noroll {
    text-overflow: ellipsis;
    display: block;
    white-space: normal;
    overflow: visible;
  }
  article section {
    font-size: 13px;
  }
}


