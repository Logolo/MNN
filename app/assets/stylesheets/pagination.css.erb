/* @group Pagination */

nav.pagination a {
  line-height: 18px;
}
nav.pagination {
	padding: 0px;
	margin: 0px;
	margin-top: 20px;
	float: right;
}
nav.pagination span.prev,
nav.pagination span.next,
nav.pagination span.first,
nav.pagination span.last,
nav.pagination span.page,
nav.pagination span.current {
	list-style-type: none;
	display: inline-block;
	margin: 0 4px;
}
nav.pagination span.prev a,
nav.pagination span.next a,
nav.pagination span.first a,
nav.pagination span.last a,
nav.pagination span.page a,
nav.pagination span.current a {
  webkit-box-shadow: 0px 0px 3px #ddd;
  background: #f3f3f3;
	border: 1px solid #ccc;
	padding: 5px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	color: #666;
	text-decoration: none;
	-webkit-box-shadow: 0px 0px 3px #ddd;
	-moz-box-shadow: 0px 0px 3px #ddd;
	box-shadow: 0px 0px 3px #ddd;
}
nav.pagination span.prev a:hover,
nav.pagination span.next a:hover,
nav.pagination span.first a:hover,
nav.pagination span.last a:hover,
nav.pagination span.page a:hover,
nav.pagination span.current a:hover {
	background: #fff;
}
nav.pagination span.current { 
  color:#aaa;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0px 0px 2px #999;
  -moz-box-shadow: 0px 0px 2px #999;      
  box-shadow: 0px 0px 2px #999;
  border: 1px solid #eee;
  padding: 5px 4px;
  margin: 0px 2px;
  line-height: 18px;
}
/* @end */